#STEP files
*.step filter=lfs diff=lfs merge=lfs -text
*.stp filter=lfs diff=lfs merge=lfs -text
#KiCAD files
*.kicad_pcb filter=lfs diff=lfs merge=lfs -text
#Image files
*.png filter=lfs diff=lfs merge=lfs -text
#FreeCAD files
*.FCStd filter=lfs diff=lfs merge=lfs -text lockable
*.kicad_pcb !text !filter !merge !diff

# C source files
*.c    text eol=lf
*.h    text eol=lf
*.inc  text eol=lf

# CMake / build system
*.cmake     text eol=lf
CMakeLists.txt  text eol=lf

# Linker scripts
*.ld    text eol=lf

# Assembly
*.s     text eol=lf
*.S     text eol=lf

# CI/CD and scripts
*.yml   text eol=lf
*.yaml  text eol=lf
*.sh    text eol=lf
*.bat    text eol=lf
